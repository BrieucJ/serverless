{
  "name": "server",
  "version": "0.0.1",
  "description": "boilerplate",
  "type": "module",
  "scripts": {
    "watch": "tsc -w",
    "compile": "tsc && cp package.json ./dist/package.json && cd dist && yarn install --prod",
    "start": "tsc && NODE_ENV=production node ./dist/index.js",
    "dev": "concurrently 'tsc -w && cp .env.development ./dist/.env.development' 'NODE_ENV=development nodemon ./dist/index.js'",
    "test": "yarn compile && cp .env.test ./dist/.env.test && NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest ./dist --silent=false --verbose --runInBand",
    "test:coverage": "yarn compile && cp .env.test ./dist/.env.test && NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest ./dist --runInBand --coverage",
    "lint": "eslint ./src --ext .ts --fix",
    "format": "prettier --write \"**/*.+(js|ts|json)\"",
    "husky": "husky install"
  },
  "keywords": [
    "MongoDB, typeORM, graphQL, Express, Apollo, Terraform, AWS Lambda"
  ],
  "author": "Brieuc JAMAIN",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.23",
    "@types/nodemailer": "^6.4.4",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "casual": "^1.6.2",
    "concurrently": "^7.2.0",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "apollo-server-express": "^3.6.7",
    "apollo-server-lambda": "^3.6.7",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.6.0",
    "nodemailer": "^6.7.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.3",
    "winston": "^3.6.0"
  }
}
